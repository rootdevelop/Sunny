@model Sunny.Services.Domain.Mission

@section scripts
{
    <script src="@Url.Content("~/Scripts/DatePicker.js")" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap-wysiwyg.min.js"></script>
    <script src="~/Scripts/jquery.hotkeys.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#editor').wysiwyg();

            $('#editor').bind("DOMSubtreeModified", function () {
                $('#editor').next().text($('#editor')[0].innerHTML);
            });
        });
    </script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Mission</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { @class = "col-xs-12 col-sm-9" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
            <div class="col-sm-3">
                <div class="input-group">
                    <input value="@Model.Date" name="Date" class="form-control date-picker" id="id-date-picker-1" type="text" data-date-format="dd-mm-yyyy" />
                    <span class="input-group-addon">
                        <i class="icon-calendar bigger-110"></i>
                    </span>
                    <span class="help-button" data-rel="popover" data-trigger="hover" data-placement="left" data-content="Date" title="Information">?</span>
                </div>
                @Html.ValidationMessageFor(model => model.Date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Text, new { @class = "control-label col-md-2" })

            <div class="col-xs-12">
                <div class="btn-toolbar" data-target="#editor" data-role="editor-toolbar">
                    <div class="btn-group">
                        <a class="btn dropdown-toggle" title="" data-toggle="dropdown" data-original-title="Font">
                            <i class="icon-font"></i>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a style="font-family:'Serif'" data-edit="fontName Serif">Serif</a>
                            </li>
                            <li>
                                <a style="font-family:'Sans'" data-edit="fontName Sans">Sans</a>
                            </li>
                            <li>
                                <a style="font-family:'Arial'" data-edit="fontName Arial">Arial</a>
                            </li>
                            <li>
                                <a style="font-family:'Arial Black'" data-edit="fontName Arial Black">Arial Black</a>
                            </li>
                            <li>
                                <a style="font-family:'Courier'" data-edit="fontName Courier">Courier</a>
                            </li>
                            <li>
                                <a style="font-family:'Courier New'" data-edit="fontName Courier New">Courier New</a>
                            </li>
                            <li>
                                <a style="font-family:'Comic Sans MS'" data-edit="fontName Comic Sans MS">Comic Sans MS</a>
                            </li>
                            <li>
                                <a style="font-family:'Helvetica'" data-edit="fontName Helvetica">Helvetica</a>
                            </li>
                            <li>
                                <a style="font-family:'Impact'" data-edit="fontName Impact">Impact</a>
                            </li>
                            <li>
                                <a style="font-family:'Lucida Grande'" data-edit="fontName Lucida Grande">Lucida Grande</a>
                            </li>
                            <li>
                                <a style="font-family:'Lucida Sans'" data-edit="fontName Lucida Sans">Lucida Sans</a>
                            </li>
                            <li>
                                <a style="font-family:'Tahoma'" data-edit="fontName Tahoma">Tahoma</a>
                            </li>
                            <li>
                                <a style="font-family:'Times'" data-edit="fontName Times">Times</a>
                            </li>
                            <li>
                                <a style="font-family:'Times New Roman'" data-edit="fontName Times New Roman">Times New Roman</a>
                            </li>
                            <li>
                                <a style="font-family:'Verdana'" data-edit="fontName Verdana">Verdana</a>
                            </li>
                        </ul>
                    </div>
                    <div class="btn-group">
                        <a class="btn dropdown-toggle" title="" data-toggle="dropdown" data-original-title="Font Size">
                            <i class="icon-text-height"></i>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a data-edit="fontSize 5">
                                    <font size="5">Huge</font>
                                </a>
                            </li>
                            <li>
                                <a data-edit="fontSize 3">
                                    <font size="3">Normal</font>
                                </a>
                            </li>
                            <li>
                                <a data-edit="fontSize 1">
                                    <font size="1">Small</font>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="btn-group">
                        <a class="btn" title="" data-edit="bold" data-original-title="Bold (Ctrl/Cmd+B)">
                            <i class="icon-bold"></i>
                        </a>
                        <a class="btn" title="" data-edit="italic" data-original-title="Italic (Ctrl/Cmd+I)">
                            <i class="icon-italic"></i>
                        </a>
                        <a class="btn" title="" data-edit="strikethrough" data-original-title="Strikethrough">
                            <i class="icon-strikethrough"></i>
                        </a>
                        <a class="btn" title="" data-edit="underline" data-original-title="Underline (Ctrl/Cmd+U)">
                            <i class="icon-underline"></i>
                        </a>
                    </div>
                    <div class="btn-group">
                        <a class="btn" title="" data-edit="insertunorderedlist" data-original-title="Bullet list">
                            <i class="icon-list-ul"></i>
                        </a>
                        <a class="btn" title="" data-edit="insertorderedlist" data-original-title="Number list">
                            <i class="icon-list-ol"></i>
                        </a>
                        <a class="btn" title="" data-edit="outdent" data-original-title="Reduce indent (Shift+Tab)">
                            <i class="icon-indent-left"></i>
                        </a>
                        <a class="btn" title="" data-edit="indent" data-original-title="Indent (Tab)">
                            <i class="icon-indent-right"></i>
                        </a>
                    </div>
                    <div class="btn-group">
                        <a class="btn btn-info" title="" data-edit="justifyleft" data-original-title="Align Left (Ctrl/Cmd+L)">
                            <i class="icon-align-left"></i>
                        </a>
                        <a class="btn" title="" data-edit="justifycenter" data-original-title="Center (Ctrl/Cmd+E)">
                            <i class="icon-align-center"></i>
                        </a>
                        <a class="btn" title="" data-edit="justifyright" data-original-title="Align Right (Ctrl/Cmd+R)">
                            <i class="icon-align-right"></i>
                        </a>
                        <a class="btn" title="" data-edit="justifyfull" data-original-title="Justify (Ctrl/Cmd+J)">
                            <i class="icon-align-justify"></i>
                        </a>
                    </div>
                    <div class="btn-group">
                        <a class="btn dropdown-toggle" title="" data-toggle="dropdown" data-original-title="Hyperlink">
                            <i class="icon-link"></i>
                        </a>
                        <div class="dropdown-menu input-append">
                            <input class="span2" type="text" data-edit="createLink" placeholder="URL">
                            <button class="btn" type="button">Add</button>
                        </div>
                        <a class="btn" title="" data-edit="unlink" data-original-title="Remove Hyperlink">
                            <i class="icon-cut"></i>
                        </a>
                    </div>
                    <div class="btn-group">
                        <a id="pictureBtn" class="btn" title="" data-original-title="Insert picture (or just drag & drop)">
                            <i class="icon-picture"></i>
                        </a>
                        <input type="file" data-edit="insertImage" data-target="#pictureBtn" data-role="magic-overlay" style="opacity: 0; position: absolute; top: 0px; left: 0px; width: 39px; height: 30px;">
                    </div>
                    <div class="btn-group">
                        <a class="btn" title="" data-edit="undo" data-original-title="Undo (Ctrl/Cmd+Z)">
                            <i class="icon-undo"></i>
                        </a>
                        <a class="btn" title="" data-edit="redo" data-original-title="Redo (Ctrl/Cmd+Y)">
                            <i class="icon-repeat"></i>
                        </a>
                    </div>
                    <input id="voiceBtn" type="text" x-webkit-speech="" data-edit="inserttext" style="display: none;">
                </div>
                <div id="editor" style="overflow: scroll; height: 300px; max-height: 300px; border: 1px solid black;">@Html.Raw(Model.Text)</div>

                @Html.TextAreaFor(model => model.Text, new { style = "display:none; visibility:hidden" })
                @Html.ValidationMessageFor(model => model.Text)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Location, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Location, new { @class = "col-xs-12 col-sm-9" })
                @Html.ValidationMessageFor(model => model.Location)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tags, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tags, new { @class = "col-xs-12 col-sm-9" })
                @Html.ValidationMessageFor(model => model.Tags)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ThumbnailUri, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ThumbnailUri, new { @class = "col-xs-12 col-sm-9" })
                @Html.ValidationMessageFor(model => model.ThumbnailUri)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImageUri, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ImageUri, new { @class = "col-xs-12 col-sm-9" })
                @Html.ValidationMessageFor(model => model.ImageUri)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.X, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.X, new { @class = "col-xs-12 col-sm-9" })
                @Html.ValidationMessageFor(model => model.X)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Y, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Y, new { @class = "col-xs-12 col-sm-9" })
                @Html.ValidationMessageFor(model => model.Y)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
